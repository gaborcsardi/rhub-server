# RHUB_SMTP_USERNAME=postmaster@rhub.io
# RHUB_SMTP_PASSWORD=<-- smtp-password -->
# RHUB_SMTP_PORT=465
# RHUB_SMTP_TLS_REQUIRED=true

RHUB_SMTP_SERVER=<-- smtp-server -->
RHUB_SMTP_USERNAME=<-- smtp-username -->
